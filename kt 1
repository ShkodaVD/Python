connection = True
while connection:
    email = input("Введите адрес электронной почты: ")
    if "." in email and "@" in email:
        print("Ваш адрес электронной почты записан.")
        break
    else:
        print("Адрес электронной почты недействителен. Повторите попытку.")
    # if input("Повторить попытку? (yes/no): ").lower() != "yes":
    #     connection = False
    #     print("Ознакомтесь с вашей электронной почтой.")
if not connection:
  print("Нет соединения")
